<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CodingHub" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="header">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="login_with_smth" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_blue</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="information_editText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="boxCornerRadiusBottomEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusTopStart">30dp</item>
    </style>

    <style name="edit_profile_edit_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="or">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="forgot_password">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="by_continuing">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="terms_and_conditions">
        <item name="android:textColor">@color/baby_blue</item>
    </style>

    <style name="conf_button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="background">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.CodingHub</item>
    </style>

    <style name="settings">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
    <style name="hello">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
    <style name="person_name">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
    <style name="settings_tv">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

</resources>