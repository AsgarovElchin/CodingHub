<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/loginOrSignUpFragment">
    <fragment
        android:id="@+id/loginOrSignUpFragment"
        android:name="com.elchinasgarov.codinghub.LoginOrSignUpFragment"
        android:label="fragment_login_or_sign_up"
        tools:layout="@layout/fragment_login_or_sign_up" >
        <action
            android:id="@+id/action_loginOrSignUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_loginOrSignUpFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.elchinasgarov.codinghub.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_bottomNavigationFragment"
            app:destination="@id/bottomNavigationFragment2" />
        <action
            android:id="@+id/action_loginFragment_to_bottomNavigationFragment2"
            app:destination="@id/bottomNavigationFragment2" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.elchinasgarov.codinghub.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" >
        <action
            android:id="@+id/action_resetPasswordFragment_to_newPasswordFragment"
            app:destination="@id/newPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/newPasswordFragment"
        android:name="com.elchinasgarov.codinghub.NewPasswordFragment"
        android:label="fragment_new_password"
        tools:layout="@layout/fragment_new_password" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.elchinasgarov.codinghub.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_enterEmailFragment"
            app:destination="@id/enterEmailFragment" />
    </fragment>
    <fragment
        android:id="@+id/enterEmailFragment"
        android:name="com.elchinasgarov.codinghub.EnterEmailFragment"
        android:label="fragment_enter_email"
        tools:layout="@layout/fragment_enter_email" >

        <action
            android:id="@+id/action_enterEmailFragment_to_enterPasswordFragment"
            app:destination="@id/enterPasswordFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_enter_password"
        android:id="@+id/enterPasswordFragment"
        android:name="com.elchinasgarov.codinghub.EnterPasswordFragment"
        android:label="EnterPasswordFragment" >
        <action
            android:id="@+id/action_enterPasswordFragment_to_enterUsernameFragment"
            app:destination="@id/enterUsernameFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_enter_username"
        android:id="@+id/enterUsernameFragment"
        android:name="com.elchinasgarov.codinghub.EnterUsernameFragment"
        android:label="EnterUsernameFragment" />
    <fragment
        android:id="@+id/bottomNavigationFragment2"
        android:name="com.elchinasgarov.codinghub.BottomNavigationFragment"
        android:label="fragment_bottom_navigation"
        tools:layout="@layout/fragment_bottom_navigation" />
</navigation>