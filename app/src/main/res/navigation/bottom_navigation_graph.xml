<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation_graph"
    app:startDestination="@id/categoryFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.elchinasgarov.codinghub.ui.main.fragments.CategoryFragment"
        android:label="Home"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_categoryFragment_to_topicFragment"
            app:destination="@id/topicFragment" />
    </fragment>
    <fragment
        android:id="@+id/leaderboardFragment"
        android:name="com.elchinasgarov.codinghub.ui.main.fragments.LeaderboardFragment"
        android:label="Leaderboard"
        tools:layout="@layout/fragment_leaderboard" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.elchinasgarov.codinghub.ui.main.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.elchinasgarov.codinghub.ui.main.fragments.EditProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/topicFragment"
        android:name="com.elchinasgarov.codinghub.ui.main.fragments.TopicFragment"
        android:label="Topics"
        tools:layout="@layout/fragment_topic" />
</navigation>